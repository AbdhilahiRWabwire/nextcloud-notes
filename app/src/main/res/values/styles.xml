<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimarySurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/isDayMode</item>
    </style>

    <style name="fab">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>
</resources>